<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintClone"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="PaintClone.MainWindow"
        mc:Ignorable="d"
        Title="Paint Clone" Height="500" Width="800" SizeToContent="WidthAndHeight">

    <StackPanel>
        <TabControl Height="100">
            <TabItem Header="FIle">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="48"/>
                    <Button Content="Open" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="23" Width="48"/>
                    <Button Content="New" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Top" Height="23" Width="48"/>
                    <Button Content="Print" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Bottom" Height="23" Width="48"/>
                </Grid>
            </TabItem>
            <TabItem Header="Paint">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="782*"/>
                    </Grid.ColumnDefinitions>
                    <xctk:ColorPicker Name="cp" Margin="3,0,615,10" DisplayColorAndName="True" 
                                      SelectedColorChanged="cp_SelectedColorChanged_1" 
                                      AvailableColorsSortingMode="HueSaturationBrightness" Grid.Column="1" Grid.ColumnSpan="2">

                    </xctk:ColorPicker>





                </Grid>
            </TabItem>
        </TabControl>
        <InkCanvas Height="402" Width="798"/>
    </StackPanel>
</Window>
