<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintClone"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="PaintClone.MainWindow"
        mc:Ignorable="d"
        Title="Paint Clone" Height="500" Width="800" SizeToContent="WidthAndHeight">

    <StackPanel>
        <TabControl Height="100">
            <TabItem Header="FIle">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="48"/>
                    <Button Content="Open" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="36" Width="48"/>
                    <Button Content="New" HorizontalAlignment="Left" Margin="48,0,0,36" Width="48"/>
                    <Button Content="Print" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Bottom" Height="36" Width="48"/>
                </Grid>
            </TabItem>
            <TabItem Header="Paint">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="782*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name ="colorBox" Grid.Column="2" HorizontalAlignment="Left" Margin="259,6,0,0" 
                              VerticalAlignment="Top" Width="74" Height="26" SelectionChanged="colorBox_SelectionChanged">
                        <ComboBoxItem>Blue</ComboBoxItem>
                        <ComboBoxItem>Red</ComboBoxItem>
                        <ComboBoxItem>Green</ComboBoxItem>
                        
                    </ComboBox>
                    <Button Content="Rectangle" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3"
                            Height="53" Width="65" Click="Rectangle_Click"/>
                    <Button Content="Circle" HorizontalAlignment="Left" VerticalAlignment="Top" Height="53" Width="65"
                            Grid.Column="2" Margin="53,0,0,0" Click="Circle_Click"/>
                    <Button Content="Triangle" HorizontalAlignment="Left" VerticalAlignment="Top" Height="53" Width="65"
                            Grid.Column="2" Margin="118,0,0,0" Click="Triangle_Click"/>
                    <Label Grid.Column="2" Content="Shapes" HorizontalAlignment="Left" Height="25" Margin="53,47,0,0" 
                           VerticalAlignment="Top" Width="56" HorizontalContentAlignment="Center"/>
                    <Label Grid.Column="2" Content="Color:" HorizontalAlignment="Left" Height="25" Margin="203,6,0,0" 
                           VerticalAlignment="Top" Width="56" HorizontalContentAlignment="Right"/>
                    <Label Grid.Column="2" Content="Size:" HorizontalAlignment="Left" Height="25" Margin="203,38,0,0" 
                        VerticalAlignment="Top" Width="56" HorizontalContentAlignment="Right"/>
                    <Button Grid.Column="2" Content="↑" HorizontalAlignment="Left" Margin="259,36,0,0" VerticalAlignment="Top" Width="15" 
                            Height="15" VerticalContentAlignment="Top" FontSize="10" Click="Upsize_Click"/>
                    <Button Grid.Column="2" Content="↓" HorizontalAlignment="Left" Margin="259,52,0,0" VerticalAlignment="Top" Width="15" 
                            Height="15" VerticalContentAlignment="Center" FontSize="10" Click="Downsize_Click"/>
                    <TextBox x:Name="brushSize" Grid.Column="2" HorizontalAlignment="Left" Margin="279,42,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment
                             ="Top" Width="26" TextChanged="TextBox_TextChanged" HorizontalContentAlignment="Center"/>

                </Grid>
            </TabItem>
        </TabControl>
        <InkCanvas Height="383" Width="800">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes x:Name="strokeAttr"
                                   Color="Black" Width="3"
                                   Height="3"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
    </StackPanel>
</Window>
